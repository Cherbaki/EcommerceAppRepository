@model Ecommerce.ViewModels.IndexVM

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Product/Index.css" type="text/css"/>

<div class="IndexPage_MainDiv">
    <div class="promo_wrapper">
        <div class="center">
            <div class="promo_wrapper_info">
                <h1 id="promo_wrapper_info_Title">All Natural Skin Remedies.</h1>
                <p class="promo_wrapper_info_p">A healthier you from the inside out. We’ve sourced the cleanest ingredients 
                to create a line of clean skin care treatments that leave you feeling your best</p>
                <div class="promo_wrapper_shopProducts_Button">
                    <a>
                        Shop products
                    </a>
                </div>
            </div>
            <div class="promo_wrapper_Images">
                
            </div>
        </div>
    </div>

    @foreach(var product in Model.Products)
    {
        <div style="display:flex;justify-content:center;align-items:start;border:solid;width:400px;height:400px;flex-wrap:wrap;">
            <img src="@product.MyImages?.ElementAt(0).ImageURL" style="width:70%;height:70%;"/>
            <h4 style="width:100%;height:2%;">
                @product.Category
            </h4>
            <h4 style="width:100%;height:5%;">
                @product.Name
            </h4>
            <h4 style="color:green;">@product.CurrentPrice $</h4>
            <a style="width:100%;height:10%;" asp-action="ProductPage" asp-route-productId="@product.Id" class="btn btn-success">Visit</a>
        </div>
    }

</div>

