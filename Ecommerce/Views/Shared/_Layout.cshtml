<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav>
        <div id="sale_block">
          <div class="center">
            <h2>Free Standard Shipping on orders over $99.99</h2>
          </div>
        </div>
        <div class="centre">
          <div class="upper_nav">
            <ul class="left_Menu">
              <li><a href="#">ABOUT</a></li>
              <li><a href="#">CONSULTATION</a></li>
            </ul>
            <h1 class="MenuTitle"><a asp-controller="Product" asp-action="Index">Home</a></h1>
            <ul class="right_Menu">
              <li>
                 <a href="#"><i class="bi bi-search"></i></a>
              </li>
              <li><a asp-controller="Cart" asp-action="Cart">CART</a></li>
              <li><a href="#">LOGIN</a></li>
            </ul>
          </div>
        </div>
        <div class="center">
          <ul class="main_nav">
            <li><a href="#">Acne</a></li>
            <li><a href="#">Sun</a></li>
            <li><a href="#">Ezcema</a></li>
            <li><a href="#">Psoriasis</a></li>
            <li><a href="#">Vitiligio</a></li>
          </ul>
        </div>
      </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="center">
            <div class="Footer_MainDiv">
                <div class="Upper_Footer">
                    <div class="Upper_Footer_LeftHalf">
                        <h1>sooth</h1>
                        <p>Explore our innovative skincare products </p>
                        <div class="Upper_Footer_LeftHalf_EmailField">
                            <div class="Upper_Footer_LeftHalf_EmailField_LeftHalf">
                                &nbspYour Email...
                            </div>
                            <div class="Upper_Footer_LeftHalf_EmailField_RightHalf">
                                &nbspSubscribe
                            </div>
                        </div>
                    </div>
                    <div class="Upper_Footer_RightHalf">
                        <div>
                            <p>Shop</p>
                            <p>Lorem ipsum al</p>
                            <p>Dolar at </p>
                            <p>Veraotio</p>
                            <p>Chauloe</p>
                        </div>
                        <div>
                            <p>About</p>
                            <p>About Us</p>
                            <p>Sooth Stories (Blog)</p>
                            <p>Contact Us</p>
                            <p>Learn More</p>
                        </div>
                        <div>
                            <p>More</p>
                            <p>Dolar at </p>
                            <p>Lorem at al</p>
                            <p>Veraotio</p>
                        </div>
                    </div>
                </div>
                <div class="Lower_Footer">
                    <div class="Lower_Footer_LeftPart">
                        <p>Sooth all rights reserved</p>
                        <div>
                            <a>Privacy Policy</a>
                            <a>Terms of Use</a>
                            <a>Contact Us</a>
                        </div>
                    </div>
                    <div class="Lower_Footer_RightPart">
                        <img src="~/Images/Facebook_Icon.png"/>
                        <img src="~/Images/Instagram_Icon.png"/>
                        <img src="~/Images/Twitter_Icon.png"/>
                        <img src="~/Images/Youtube_Icon.png"/>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
